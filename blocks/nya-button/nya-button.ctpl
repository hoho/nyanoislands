nya::button $title $size="m" $theme $type="button" $class $disabled $noAPI
    &"nya-button.css"
    &"nya-button.js"
    button%nya-button{size=$size}{theme=$theme}[type=$type]:if($disabled, [disabled]) AS $node
        @class +$class
        span%nya-button(title) AS $titleNode
            $title
    EXPOSE ($noAPI ? undefined : new Nya.Button($node, $titleNode))
