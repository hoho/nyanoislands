nya::checkbox $label $name $size="m" $checked $class $disabled $noAPI
    &"checkbox.css"
    &"checkbox.js"
    label%nya-checkbox{size=$size}:if($disabled, .nya-checkbox_disabled) AS $node
        @class +$class

        input%nya-checkbox(input)[type="checkbox"][name=$name]:if($checked, [checked]):if($disabled, [disabled])
        span%nya-checkbox(flag)
            span%nya-checkbox(flag-icon)
        span%nya-checkbox(label)
            $label
