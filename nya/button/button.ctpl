nya::button $title $theme="normal" $size="m" $type="button" $class $disabled $noAPI
    &"button.css"
    &"button.js"
    button%nya-button[type=$type]:if($disabled, [disabled]) AS $node
        @class +('nya-button_' + $theme + '_' + $size + ($class ? ' ' + $class : ''))
        span%nya-button(title) AS $titleNode
            $title
    EXPOSE ($noAPI ? undefined : new Nya.Button($node, $titleNode))
