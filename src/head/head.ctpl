nya::head $title $avatar $avatarURL
    &|(typeof theme === 'undefined' ? '"head.light.css"' : '"head.' + theme + '.css"')|
    div.nya-head
        a.nya-head__title[href="/"]
            $title
        TEST $avatar
            a.nya-head__avatar[style=('background-image: url(' + $avatar + ');')][href=$avatarURL]
        div.nya-head__nav
            PAYLOAD
