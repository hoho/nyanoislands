@import '../nya'
@import '_skin-dark'

$skin-islands-button-content = '.nya-button__title'
$skin-islands-button-disabled = '[disabled]'

.nya-button
  kind: button
  position: relative // Why is it there?
  text-align: center // Fixes #323


.nya-button_size_m
  skin: button


.nya-button_size_s
  skin: button small


.nya-button_theme_action
  skin: action-button


.nya-button_theme_action.nya-button_size_s
  skin: action-button small


.nya-button_theme_pseudo
  skin: pseudo-button


.nya-button_theme_pseudo.nya-button_size_s
  skin: pseudo-button small


.nya-button_theme_dark
  skin: dark-button


.nya-button_theme_dark.nya-button_size_s
  skin: dark-button small


.nya-button[disabled],
.nya-button_disabled
  kind: disabled 0.6
